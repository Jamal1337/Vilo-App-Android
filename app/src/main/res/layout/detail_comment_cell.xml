<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/commentUserImage"
            android:src="@drawable/v"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/commentUsername"
            android:layout_alignLeft="@+id/commentUserImage"
            android:layout_alignStart="@+id/commentUserImage"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/commentTime"
            android:layout_alignTop="@+id/commentUsername"
            android:layout_toRightOf="@+id/commentUsername"
            android:layout_toEndOf="@+id/commentUsername"
            android:layout_marginLeft="20dp"
            android:textColor="#ff2b58" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="42dp"
            android:id="@+id/commentLine"
            android:background="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="das ist ein geiler text man weiÃŸ garnicht was hier eigtl. geschrieben werden soll aber ich schreib einfach mal wild runter um zu schauen ob sich das textfeld erweitert oder auch nicht"
                android:id="@+id/commentText"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/commentImage"
                android:src="@drawable/placeholder"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/commentText"
                android:baselineAlignBottom="false"
                android:clickable="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="30dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>